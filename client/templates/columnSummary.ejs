<%
let arr = []

for (const p of list) {

    const value = p[0]
    const isNumber = typeof value === "number" && !isNaN(value)

    if (locals.alwaysShow === true || (isNumber && value > 0)) {

        let formatted

        if (isNumber) {
            formatted = (value % 1 === 0 ? value : value.toFixed(1))
        } else {
            formatted = String(value)
        }

        arr.push(formatted + p[1])
    }
}

%>

%>

