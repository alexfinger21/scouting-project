        <div id="highlight-team-container">
            <label for="highlight-team"> <b>Highlight team: </b> </label>
            <input name="highlight-team" id="highlight-team" type="number">
        </div>

        <div id="highlight-match-container">
            <label for="highlight-match"> <b>Highlight match: </b> </label>
            <input name="highlight-match" id="highlight-match" type="number">
        </div>
        
        <div id="graph-display-container">
            <input class="edge-left" type="button" value="FRC Rank" name="0">
            <input type="button" value="Game Score" name="1">
            <input type="button" value="Radar" name="2">
            <input type="button" value="Auton" name="3">
            <input type="button" value="Teleop" name="4">
            <input type="button" value="Endgame" name="5">
            <input class="edge-right" type="button" value="Num. Games Played" name="6">
        </div>


        <div id="team-summary-container">

            <button id="arrow-left">
                <img src="../static/images/arrow-left.svg">
            </button>
            <div id="graph-holder">
                <div id="chart-area-wrapper">
                    <canvas id="scatterplot-chart" display="true"></canvas>
                    <canvas id="bar-graph-chart" width="100%" height=" <%- (numPoints * 8) +'%' %>" display="false"></canvas>
                    <canvas id="spider-chart" display="false"></canvas>
                </div>
                <!--Chart.js-->
            </div>
            <button id="arrow-right">
                <img src="../static/images/arrow-right.svg">
            </button>
        </div>

    </div>

        <%- include("../static/partials/footer") %>
</body>

</html>