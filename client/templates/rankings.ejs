<!DOCTYPE html>
<html lang="en">

<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js" defer></script>

    <%- include("../static/partials/header") %>

        <div id="page-holder">
            <h1 id="rankings-title">Team Rankings</h1>
            <h3 id="rankings-subtitle">
                <%=year%> - <%=eventCode%> - <%=timeStamp%>
            </h3>
            <div id="rankings-container">
                <!--HEADINGS-->
                <table id="headings-table">
                    <colgroup>
                        <col span="1" style="width: 17%">
                        <col span="1" style="width: 17%">
                        <col span="1" style="width: 17%">
                        <col span="1" style="width: 32%">
                        <col span="1" style="width: 17%">
                    </colgroup>
                    <tr>
                        <th>Rank</th>
                        <th>Team</th>
                        <th>Games</th>
                        <th>Win/Loss/Tie</th>
                        <th>DQ's</th>
                    </tr>
                </table>
                <!--BODY-->
                <div id="rankings-scroller">
                    <table id="rankings-table">
                        <colgroup>
                            <col span="1" style="width: 17%">
                            <col span="1" style="width: 17%">
                            <col span="1" style="width: 17%">
                            <col span="1" style="width: 32%">
                            <col span="1" style="width: 17%">
                        </colgroup>
                        <%for(let i=0; i < teamStats.length; i++) {%>
                            <tr>
                                <td>
                                    <%= teamStats[i].rank %>
                                </td>
                                <td>
                                    <%= teamStats[i].teamNumber%>
                                </td>
                                <td>
                                    <%= teamStats[i].matchesPlayed%>
                                </td>
                                <td>
                                    <%= teamStats[i].wins + "/" + teamStats[i].losses + "/" + teamStats[i].ties%>
                                </td>
                                <td>
                                    <%= teamStats[i].dq%>
                                </td>
                            </tr>
                            <% } %>
                    </table>
                </div>
            </div>
        </div>
    <%- include("../static/partials/footer") %>
</body>

</html>